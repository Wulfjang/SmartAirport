<Window x:Class="SmartAirport.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Логин" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,50,0,0"/>
        <TextBox Name="LoginTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,30,0" Width="240"/>
        <TextBlock Text="Пароль" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,100,0,0"/>
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,30,0" Width="240"/>
        <Button Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0" Width="100" Click="LoginButton_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0" Width="100" Click="CancelButton_Click"/>
    </Grid>
</Window>