<Window x:Class="SmartAirport.AddStaffForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить сотрудника" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ID сотрудника:"/>
            <TextBox Name="IDTextBox" IsReadOnly="True" Background="LightGray"/>

            <TextBlock Text="Имя сотрудника:" Margin="0,10,0,0"/>
            <TextBox Name="NameTextBox"/>

            <TextBlock Text="Фамилия сотрудника:" Margin="0,10,0,0"/>
            <TextBox Name="SurnameTextBox"/>

            <TextBlock Text="Должность сотрудника:" Margin="0,10,0,0"/>
            <TextBox Name="PositionTextBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Width="100" Click="SaveButton_Click" Margin="0,0,10,0"/>
                <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>